{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mdview",
  "version": "0.1.0",
  "identifier": "com.davideidelman.mdview",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "mdview",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:default",
            "core:webview:default",
            "dialog:default",
            "dialog:allow-open",
            "shell:default",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2025 David Eidelman",
    "category": "Utility",
    "shortDescription": "A lightweight Markdown viewer",
    "longDescription": "A lightweight cross-platform Markdown viewer built with Rust and Tauri"
  },
  "plugins": {}
}
